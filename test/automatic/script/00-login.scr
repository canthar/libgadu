#-----------------------------------------------------------------------------
# Login with parameters
#-----------------------------------------------------------------------------
login (uin = 0x123456, password = "ABC", status = GG_STATUS_INVISIBLE_DESCR, status_descr = "Test", has_audio = 1, image_size = 255, external_addr = 127.0.0.1, external_port = 0x1234, status_flags = 0x11223344, client_version = "1.2.3.4")
expect connect
send (01 00 00 00, auto, 12 34 56 78)
expect data (83 00 00 00, auto, 0a 02 "pl", 12 09 00 07 "1193046", 1a 14 xx*20, 20 02, 2d 77 ff ee 03, 35 14 00 03 00, 3a 10 "GG" 20 "1.2.3.4" 20 "WINNT", 45 16 00 00 00, 4a 04 "Test", 52 04 00 00 00 00, 5a 58 "avatar" 2c "StatusComments" 2c "ggaccount" 2c "edisc" 2c "music_shared" 2c "bot" 2c "fanpage" 2c "pubdir" 2c "botCaps" 2c "gifts" 2c "Gift", 60 ff 01, 68 64, 75 7f 00 00 00, 78 00, 88 80 01)
send (03 00 00 00, auto)
expect event GG_EVENT_CONN_SUCCESS
logoff
expect disconnect

#-----------------------------------------------------------------------------
# Login with custom client_version
#-----------------------------------------------------------------------------
login (uin = 1, password = "", client_version = "Foobar 1.2.3.4")
expect connect
send (01 00 00 00, auto, 12 34 56 78)
expect data (83 00 00 00, auto, xx*43, 3a 0e "Foobar", 20, "1.2.3.4", xx*118)
send (03 00 00 00, auto)
expect event GG_EVENT_CONN_SUCCESS
logoff
expect disconnect

